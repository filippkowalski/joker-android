<?xml version="1.0" encoding="utf-8"?>
<android.gesture.GestureOverlayView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/gestures"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:eventsInterceptionEnabled="true"
        android:gestureStrokeType="single"
        android:orientation="vertical" 
        android:gestureStrokeWidth="0.0"
        android:fadeOffset="0"
        android:fadeDuration="0"      
        >
        
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"    
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="@drawable/jokerbckg">    
        

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:baselineAligned="false" >


            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/changingImage"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:contentDescription="@string/category"
                    android:src="@drawable/chuck" />

                <TextView
                    android:id="@+id/category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="20dp"
                    android:gravity="left"
                    android:text="@string/category"
                    android:textColor="#ffffff"
                    android:textSize="70sp" />

            </LinearLayout>
        </LinearLayout>
        
		<TextView
		    android:id="@+id/joke"
		    android:layout_width="fill_parent"
		    android:layout_height="0dp"
		    android:layout_marginLeft="15dip"
		    android:layout_marginRight="15dip"
		    android:layout_weight="31.06"
		    android:gravity="top"
		    android:scrollbars="vertical"
		    android:text="@string/joke"
		    android:textColor="#000000"
		    android:textSize="30sp" />

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="30dp"
		    android:layout_weight="4" >

		    <ImageButton
		        android:id="@+id/previous"
		        android:layout_width="115dp"
		        android:layout_height="115dp"
		        android:background="@null"
		        android:contentDescription="@string/previ"
		        android:scaleType="fitCenter"
		        android:src="@drawable/button2" />

		    <ImageButton
		        android:id="@+id/socialshare"
		        android:layout_width="115dp"
		        android:layout_height="115dp"
		        android:background="@null"
		        android:contentDescription="@string/socialShare"
		        android:scaleType="fitCenter"
		        android:src="@drawable/socialshare" />

		    <ImageButton
		        android:id="@+id/fav"
		        android:layout_width="115dp"
		        android:layout_height="115dp"
		        android:layout_marginTop="2dp"
		        android:background="@null"
		        android:contentDescription="@string/fav"
		        android:scaleType="fitCenter"
		        android:src="@drawable/favstarupdate" />

		    <ImageButton
		        android:id="@+id/ocen"
		        android:layout_width="115dp"
		        android:layout_height="115dp"
		        android:background="@null"
		        android:contentDescription="@string/ocen"
		        android:scaleType="fitCenter"
		        android:src="@drawable/ocenmini" />

		    <ImageButton
		        android:id="@+id/next"
		        android:layout_width="115dp"
		        android:layout_height="115dp"
		        android:background="@null"
		        android:contentDescription="@string/previ"
		        android:scaleType="fitCenter"
		        android:src="@drawable/button1" />

		</LinearLayout>






</LinearLayout>

        <TextView
            android:id="@+id/nr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="90dp"
            android:text="@string/nr"
            android:textColor="#ffffff"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/ocenaTekst"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="400dp"
            android:text="@string/ocenaTekst"
            android:textColor="#000000"
            android:textSize="30sp" />
        
        <TextView
            android:id="@+id/ocena"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="520dp"
            android:text="@string/ocena"
            android:textColor="#000000"
            android:textSize="30sp" />

</android.gesture.GestureOverlayView>
