<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="@drawable/mainbckg"
	    android:orientation="horizontal"
	    android:gravity="center" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/kawaly"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="330dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:contentDescription="@string/kawaly"
                    android:scaleType="fitCenter"
                    android:src="@drawable/kawalybutton" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/category"
                    android:textColor="#000000"
                    android:textSize="30sp" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/ocen"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="330dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:contentDescription="@string/ocen"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ocenbutton" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/ocen"
                    android:textColor="#000000"
                    android:textSize="30sp" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/ustawienia"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:contentDescription="@string/ustawienia"
                    android:paddingTop="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ustawieniabutton" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/ustawienia"
                    android:textColor="#000000"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/polubnasnafb"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:contentDescription="@string/polubnasnafb"
                    android:paddingTop="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/polubnasnafbbutton" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="@string/polubnasnafb"
                    android:textColor="#000000"
                    android:textSize="30sp" />

            </LinearLayout>

        </TableRow>

    

</TableLayout>
