<?xml version="1.0" encoding="utf-8"?><android.gesture.GestureOverlayView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/gestures"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:eventsInterceptionEnabled="true"
        android:gestureStrokeType="single"
        android:orientation="vertical" 
        android:gestureStrokeWidth="0.0"
        android:fadeOffset="0"
        android:fadeDuration="0"      
        >
        
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"    
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="@drawable/jokerbckg">    
        
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1" >
            <LinearLayout                android:layout_width="0dip"                android:layout_height="wrap_content"                android:layout_weight="4"                android:orientation="horizontal" >
                <TextView                    android:id="@+id/category"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:layout_marginLeft="15dp"                    android:layout_marginTop="10dp"                    android:gravity="left"                    android:text="@string/category"                    android:textColor="#000000"                    android:textSize="30dip" />                <LinearLayout                    android:layout_width="wrap_content"                    android:layout_height="match_parent"                    android:orientation="vertical" >                    <TextView                        android:id="@+id/ocena"                        android:layout_width="fill_parent"                        android:layout_height="wrap_content"                        android:layout_marginTop="10dp"                        android:layout_weight="1"                        android:gravity="center"                        android:text="Ocena :"                        android:textColor="#000000" />                    <TextView                        android:id="@+id/nr"                        android:layout_width="173dp"                        android:layout_height="wrap_content"                        android:layout_marginTop="5dp"                        android:layout_weight="1"                        android:gravity="center"                        android:text="@string/nr"                        android:textColor="#000000" />                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        		<TextView		    android:id="@+id/joke"		    android:layout_width="fill_parent"		    android:layout_height="0dp"		    android:layout_marginLeft="15dip"		    android:layout_marginRight="15dip"		    android:layout_weight="31.06"		    android:gravity="top"		    android:scrollbars="vertical"		    android:text="@string/joke"		    android:textColor="#000000"		    android:textSize="18dip" />		<LinearLayout		    android:layout_width="match_parent"		    android:layout_height="30dp"		    android:layout_weight="4" >			<ImageButton			    android:id="@+id/previous"			    android:layout_width="0dip"			    android:layout_height="match_parent"			    android:layout_weight="1"			    android:background="@null"			    android:contentDescription="@string/previ"			    android:scaleType="fitStart"			    android:src="@drawable/button2" />		    		    <ImageButton		        android:id="@+id/socialshare"		        android:layout_width="70dp"		        android:layout_height="70dp"		        android:background="@null"		        android:contentDescription="@string/socialshare"		        android:src="@drawable/socialshare" />		    <ImageButton		        android:id="@+id/fav"		        android:layout_width="70dp"		        android:layout_height="70dp"		        android:layout_marginTop="2dp"		        android:background="@null"		        android:contentDescription="@string/fav"		        android:scaleType="fitCenter"		        android:src="@drawable/favstarupdate" />		    <ImageButton		        android:id="@+id/next"		        android:layout_width="0dip"		        android:layout_height="match_parent"		        android:layout_weight="1"		        android:background="@null"		        android:contentDescription="@string/previ"		        android:scaleType="fitStart"		        android:src="@drawable/button1" />		</LinearLayout>
</LinearLayout></android.gesture.GestureOverlayView>
